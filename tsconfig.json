{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": ["**/*"],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "App/*": ["src/app/*"],
      "Config/*": ["src/config/*"],
      "Contracts/*": ["src/contracts/*"],
      "Database/*": ["src/database/*"]
    },
    "types": ["@adonisjs/core", "@japa/preset-adonis/build/adonis-typings"]
  }
}
